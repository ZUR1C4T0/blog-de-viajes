<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Publicación</title>
    <link rel="shortcut icon" href="/img/favicon.ico" type="image/x-icon">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css">
</head>

<body class="d-flex flex-column" style="min-height: 100vh;">
    <%- include("./partials/private_header.ejs", { active: "admin" , session }) %>

        <div class="container-md flex-grow-1">
            <div class="row">
                <div class="col mt-3">
                    <h1>
                        <a href="/admin/publicaciones" class="link-dark text-decoration-none fa fa-arrow-left"></a>
                        Editar
                    </h1>
                    <hr>
                </div>
            </div>
            <div class="row">
                <div class="col-md-8 col-lg-6 mx-auto">

                    <% if(alerta && alerta.length>0) { alerta = JSON.parse(alerta) %>
                        <div class="alert alert-<%=alerta.color%> alert-dismissible fade show position-fixed"
                            style="top: 70px; right: 20px;">
                            <h6>
                                <i class="fa <%=alerta.icon%>"></i>
                                <%= alerta.text %>
                            </h6>
                            <button class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                        <% } %>

                            <form class="bg-secondary bg-opacity-10 p-3 rounded-4 shadow-lg"
                                action="/admin/publicaciones/procesar_editar/<%=publicacion.id%>" method="post">
                                <legend>Modifique los datos de la publicación</legend>
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" name="titulo" placeholder="titulo" required
                                        autofocus value="<%= publicacion.titulo %>">
                                    <label>Título</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <textarea class="form-control" name="resumen" placeholder="resumen"
                                        style="min-height: 58px;" required><%= publicacion.resumen %></textarea>
                                    <label>Resumen</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <textarea class="form-control" name="contenido" placeholder="contenido"
                                        style="min-height: 106px;" required><%= publicacion.contenido %></textarea>
                                    <label>Contenido</label>
                                </div>
                                <div class="d-flex justify-content-center">
                                    <button class="btn btn-primary">Confirmar</button>
                                </div>
                            </form>

                </div>
            </div>
        </div>

        <%- include("./partials/footer") %>
</body>

</html>