<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalles de la Publicaci√≥n</title>
    <link rel="shortcut icon" href="/img/favicon.ico" type="image/x-icon">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css">
</head>

<body class="d-flex flex-column" style="min-height: 100vh;">
    <%- (session) ? include("./partials/private_header.ejs", {active:'', session}) :
        include("./partials/public_header.ejs",{active:'inicio', session}) %>

        <div class="container-md flex-grow-1">
            <div class="row">
                <div class="col py-3">
                    <h1>
                        <a href="/" class="link-dark text-decoration-none fa fa-arrow-left"></a>
                        <%=publicacion.titulo%>
                    </h1>
                </div>
            </div>

            <% if(alerta && alerta.length>0) { alerta=JSON.parse(alerta) %>
                <div class="alert alert-<%=alerta.color%> alert-dismissible fade show position-fixed"
                    style="top: 70px; right: 20px;">
                    <h6>
                        <i class="fa <%=alerta.icon%>"></i>
                        <%= alerta.text %>
                    </h6>
                    <button class="btn-close" data-bs-dismiss="alert"></button>
                </div>
                <% } %>

                    <div class="row justify-content-center">
                        <div class="col-md-10">
                            <div class="card">
                                <div class="card-header mb-3">
                                    <h2 class="d-flex">
                                        <%= publicacion.resumen %>
                                            <div class="badge rounded-pill bg-danger fa fa-heart ms-auto">
                                                <%= publicacion.votos %>
                                            </div>
                                            <a class="btn btn-outline-danger rounded-circle"
                                                href="/publicacion/<%=publicacion.id%>/votar">+1</a>
                                    </h2>
                                </div>
                                <div class="card-body">
                                    <div class="card-subtitle mb-3 text-muted">
                                        <h6>
                                            <i class="fa-regular fa-calendar"></i>
                                            <%= publicacion.fecha_hora.getFullYear() %>/
                                                <%= publicacion.fecha_hora.getMonth()+1 %>/
                                                    <%= publicacion.fecha_hora.getDate() %>
                                        </h6>
                                    </div>
                                    <div class="card-text">
                                        <p>
                                            <%- publicacion.contenido %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
        </div>

        <%- include("./partials/footer") %>

</body>

</html>